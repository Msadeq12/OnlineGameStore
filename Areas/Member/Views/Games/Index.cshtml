@using PROG3050_HMJJ.Models;
@model IEnumerable<Games>

@{
    ViewData["Title"] = "CVGS Games";
    
}

<h1>CVGS Collections</h1>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Price (CAD)</th>
            <th>Genre</th>
            <th>Platform</th>
        </tr>
    </thead>

    <tbody>
      
        
        @foreach (var item in Model)
        {
            if(item == null)
            {
                <tr>No games in collection</tr>
            }

            <tr class="text-white">
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Genres.Name</td>
                <td>@item.Platforms.Name</td>
            </tr>
        }
    </tbody>
</table>
