@model OrderConfirmationViewModel

<h2>Order Confirmation</h2>

@if (Model != null)
{
    <h3>Invoice Details</h3>
    <p style="display: none;">Invoice ID: @Model.InvoiceDetails.Id</p>
    <p>Invoice Date: @Model.InvoiceDetails.InvoiceDate.ToString("dd MMM yyyy")</p>
    <p>Total Bill: @Model.InvoiceDetails.Bill</p>
    <p>Payment Method: @Model.InvoiceDetails.PaymentMethod</p>

    <h3>Order Items</h3>
    @foreach (var item in Model.OrderItems)
    {
        <div>
            <p>Game Name: @item.GameName</p>
            <p>Quantity: @item.Quantity</p>
            <p>Price per Unit: @item.UnitPrice</p>
            <p>Total Price: @item.TotalPrice</p>
        </div>
    }
}
else
{
    <p>Order information is not available.</p>
}
