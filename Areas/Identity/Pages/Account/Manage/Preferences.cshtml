@using PROG3050_HMJJ.Models;
@model PROG3050_HMJJ.Areas.Member.Models.Preferences

@{
    ViewData["Title"] = "Preferences";
}

<h1>Preferences</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Platforms" class="control-label">Platforms</label>
                <select asp-for="Platforms" class="form-control">
                    @foreach (Platforms p in ViewBag.Platforms)
                    {
                        <option value="@p.ID">@p.Name</option>
                    }
                </select>
                <span asp-validation-for="Platforms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genres" class="control-label">Favourite Genre</label>
                <select asp-for="Genres" class="form-control">
                    @foreach (Genres g in ViewBag.Genres)
                    {
                        <option value="@g.ID">@g.Name</option>
                    }
                </select>
                <span asp-validation-for="Genres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Languages" class="control-label"></label>
                <input asp-for="Languages" class="form-control" />
                <span asp-validation-for="Languages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
