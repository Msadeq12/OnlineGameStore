@page
@model PROG3050_HMJJ.Areas.Identity.Pages.Account.Manage.AddressModel
@{
}

<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6 row">
        <h2>Mailing Address</h2>
        <form id="mailingAddress" method="post">
            <div class="form-group row">
                <label asp-for="MailingAddress.Line1" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="MailingAddress.Line1" class="form-control" />
                </div>
                <div class="col">
                    <span asp-validation-for="MailingAddress.Line1" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="MailingAddress.Line2" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="MailingAddress.Line2" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="MailingCountryID" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-6">
                    <select asp-for="MailingCountryID" asp-items="Model.MailingCountryList" class="form-select" onchange="SelectMailingRegions()">
                    </select>
                </div>
            </div>
            
            <div class="form-group row">
                <label asp-for="MailingAddress.RegionID" class="col-sm-4 col-form-label">@ViewData["MailingRegion"]</label>
                <div class="col-sm-6">
                    <select asp-for="MailingAddress.RegionID" asp-items="Model.MailingRegionList" class="form-select">
                    </select>
                </div>
                <div class="col">
                    <span asp-validation-for="MailingAddress.RegionID" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="MailingAddress.City" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="MailingAddress.City" class="form-control" />
                </div>
                <div class="col">
                    <span asp-validation-for="MailingAddress.City" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="MailingAddress.PostalCode" class="col-sm-4 col-form-label">@ViewData["MailingCode"]</label>
                <div class="col-sm-6">
                    <input asp-for="MailingAddress.PostalCode" class="form-control" />
                </div>
                <div class="col">
                    <span asp-validation-for="MailingAddress.PostalCode" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="MailingAddress.DeliveryInstructions" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="MailingAddress.DeliveryInstructions" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="MailingAddress.SameAddress" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-6">
                    <input type="checkbox" asp-for="MailingAddress.SameAddress" class="form-check" />
                </div>
            </div>
            <div>
                <button typeof="submit" asp-page-handler="mailing" class="btn btn-primary">Save Mailing Address</button>
            </div>
            <div style="display: none">
                <button id="selectMailingRegions" type="submit" asp-page-handler="regions" asp-route-addressType="mailing"></button>
            </div>
            <input type="hidden" asp-for="MailingAddress.ID" />
        </form>
    </div>

    @if (!Model.MailingAddress.SameAddress)
    {
        <br />
        <div class="col-md-6 row">
            <h2>Shipping Address</h2>
            <form id="mailingAddress" method="post">
                <div class="form-group row">
                    <label asp-for="ShippingAddress.Line1" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-6">
                        <input asp-for="ShippingAddress.Line1" class="form-control" />
                    </div>
                    <div class="col">
                        <span asp-validation-for="ShippingAddress.Line1" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ShippingAddress.Line2" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-6">
                        <input asp-for="ShippingAddress.Line2" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ShippingCountryID" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-6">
                        <select asp-for="ShippingCountryID" asp-items="Model.ShippingCountryList" class="form-select" onchange="SelectShippingRegions()">
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="ShippingAddress.RegionID" class="col-sm-4 col-form-label">@ViewData["ShippingRegion"]</label>
                    <div class="col-sm-6">
                        <select asp-for="ShippingAddress.RegionID" asp-items="Model.ShippingRegionList" class="form-select">
                        </select>
                    </div>
                    <div class="col">
                        <span asp-validation-for="ShippingAddress.RegionID" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ShippingAddress.City" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-6">
                        <input asp-for="ShippingAddress.City" class="form-control" />
                    </div>
                    <div class="col">
                        <span asp-validation-for="ShippingAddress.City" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ShippingAddress.PostalCode" class="col-sm-4 col-form-label">@ViewData["ShippingCode"]</label>
                    <div class="col-sm-6">
                        <input asp-for="ShippingAddress.PostalCode" class="form-control" />
                    </div>
                    <div class="col">
                        <span asp-validation-for="ShippingAddress.PostalCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ShippingAddress.DeliveryInstructions" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-6">
                        <input asp-for="ShippingAddress.DeliveryInstructions" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ShippingAddress.SameAddress" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-6">
                        <input type="checkbox" asp-for="ShippingAddress.SameAddress" class="form-check" />
                    </div>
                </div>
                <div>
                    <button typeof="submit" asp-page-handler="shipping" class="btn btn-primary">Save Shipping Address</button>
                </div>
                <div style="display: none">
                    <button id="selectShippingRegions" type="submit" asp-page-handler="regions" asp-route-addressType="shipping"></button>
                </div>
                <input type="hidden" asp-for="ShippingAddress.ID">
            </form>

        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function SelectMailingRegions() {
            document.getElementById("selectMailingRegions").click();
        }

        function SelectShippingRegions() {
            document.getElementById("selectShippingRegions").click();
        }
    </script>
 }