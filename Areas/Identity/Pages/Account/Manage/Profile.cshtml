@page
@using PROG3050_HMJJ.Areas.Member.Models;
@model Profile
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Profiles;
}

<h3>@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Profile" asp-action="Profile" id="profile-form" method="post">
            <div class="form-group row">
                <label asp-for="FirstName" class="col-sm-4 col-form-label"></label>

                <div class="col-sm-6">
                    <input asp-for="FirstName" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="LastName" class="col-sm-4 col-form-label"></label>

                <div class="col-sm-6">
                    <input asp-for="LastName" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Gender" class="col-sm-4 col-form-label"></label>

                <div class="col-sm-6">
                    <select asp-for="Gender" class="form-control">
                        <option value="null"></option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="other">Other</option>
                    </select>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="DOB" class="col-sm-4 col-form-label"></label>

                <div class="col-sm-4">
                    <input asp-for="DOB" type="date" class="form-control" />
                </div>

                <div class="col">
                    <span asp-validation-for="DOB" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="RecievePromotions" class="col-sm-4 col-form-label"></label>

                <div class="col-sm-1">
                    <input asp-for="RecievePromotions" type="checkbox" />
                </div>
            </div>

            <div class="row">
                <div>
                    <button id="profileSaveBtn" type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
