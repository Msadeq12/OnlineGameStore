@model PROG3050_HMJJ.Areas.Admin.Models.Game

@{
    ViewData["Title"] = "Edit Game";
}

<h1>@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-md-4">

        <form asp-action="Edit" method="post" class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="gameID" />

            <div class="form-group">
                <label asp-for="Title" class="control-label">Game Title:</label>
                <input class="form-control" asp-for="Title" />
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label">Game Description:</label>
                <input  class="form-control" asp-for="Description" />
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label">Price:</label>
                <input class="form-control" asp-for="Price" />
            </div>

            <div class="form-group">
                <label asp-for="GenreID" class="control-label">Genre:</label>
                <select asp-for="GenreID" class="form-control">
                    <option value=""></option>
                    @foreach (Genre g in ViewBag.Genres)
                    {
                        <option value="@g.GenreID">@g.GenreName</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Publisher" class="control-label">Publisher:</label>
                <input asp-for="Publisher" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="ReleaseYear" class="control-label">Release Year:</label>
                <input asp-for="ReleaseYear" class="form-control" />
            </div>

            @* <div class="form-group">
                <label asp-for="Icon" class="control-label">Game Icon:</label>
                <input type="file" class="form-control" asp-for="Icon" />
            </div> *@

            <div class="form-group pt-2 mt-2">
                <button class="btn btn-primary" type="submit">@ViewData["Title"]</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>



        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
