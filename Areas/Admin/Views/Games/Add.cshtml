@using PROG3050_HMJJ.Models;
@model PROG3050_HMJJ.Areas.Admin.Models.Games       

@{
    ViewData["Title"] = "Add Game";
}

<h1>@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" method="post" class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="ID"/>

            <div class="form-group">
                <label asp-for="Title" class="control-label">Game Title:</label>
                <input class="form-control" asp-for="Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label">Game Description:</label>
                <input class="form-control" asp-for="Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label">Price:</label>
                <input class="form-control" asp-for="Price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GenresID" class="control-label">Genre:</label>
                <select asp-for="GenresID" class="form-control">
                    <option value=""></option>
                    @foreach (Genres g in ViewBag.Genres)
                    {
                        <option value="@g.ID">@g.Name</option>
                    }
                </select>
                <span asp-validation-for="GenresID" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="PlatformsID" class="control-label">Platform:</label>
                <select asp-for="PlatformsID" class="form-control">
                    <option value=""></option>
                    @foreach (Platforms g in ViewBag.Platforms)
                    {
                        <option value="@g.ID">@g.Name</option>
                    }
                </select>
                <span asp-validation-for="PlatformsID" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Publisher" class="control-label">Publisher:</label>
                <input asp-for="Publisher" class="form-control" />
                <span asp-validation-for="Publisher" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReleaseYear" class="control-label">Release Year:</label>
                <input asp-for="ReleaseYear" class="form-control" />
                <span asp-validation-for="ReleaseYear" class="text-danger"></span>
            </div>

            @* <div class="form-group">
                <label asp-for="Icon" class="control-label">Game Icon:</label>
                <input type="file" class="form-control" asp-for="Icon" />
            </div> *@
            
            <div class="form-group pt-2 mt-2">
                <button type="submit" class="btn btn-primary">@ViewData["Title"]</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
            
            
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
