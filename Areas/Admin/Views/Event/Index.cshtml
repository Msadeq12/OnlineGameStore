@model IEnumerable<PROG3050_HMJJ.Areas.Admin.Models.Event>

@{
    ViewData["Title"] = "Events";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Add">Add new Events</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date.TimeOfDay)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        
        @foreach (var item in Model) {

            if(Model.ToList().Count == 0)
            {
                <tr>No events in collection</tr>
            }

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date.TimeOfDay)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.eventID }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.eventID })
            </td>
        </tr>
}
    </tbody>
</table>
