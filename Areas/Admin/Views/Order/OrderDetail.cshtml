@using PROG3050_HMJJ.Areas.Member.Models;
@model List<Order>

<h2>My Orders</h2>
<a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to Admin Page</a>
<hr />
@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var order in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-header">
                        Game Name: @order.GameName
                    </div>
                    <div class="card-body">
                        <p class="card-text">Quantity: @order.Quantity</p>
                        <p class="card-text">Format: @order.OrderType</p>
                        <p class="card-text">Status: @order.Status</p>
                        <p class="card-text">Price per Unit: @order.UnitPrice.ToString("C")</p>
                        <p class="card-text">Total Price: @order.TotalPrice.ToString("C")</p>
                        <p class="card-text">Order Date: @order.OrderDate.ToString("d")</p>
                        <p class="card-text">Invoice Date: @order.Invoice?.InvoiceDate.ToString("d")</p>
                    </div>
                    <div class="card-footer">
                        <a asp-area="Admin" asp-controller="Order" asp-action="UpdateOrderStatus" asp-route-gameID="@order.Id" class="btn btn-success">Mark it as Processed</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <h3>You have no orders to process.</h3>
}
