@model PROG3050_HMJJ.Models.ViewModel.LoginSignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<div class="container">
    <div class="col-6 offset-3">
        <div class="text-center">
            <h1 class="text-bg-light">Member Registration</h1>
        </div>
        <form method="post" asp-action="SignUp">
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input type="text" asp-for="UserName" placeholder="Enter username" class="form-control" autocomplete="off" />
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input type="text" asp-for="Email" placeholder="Enter email" class="form-control" autocomplete="off" />
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input type="text" asp-for="Password" placeholder="Enter password" class="form-control" autocomplete="off" />
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input type="text" asp-for="ConfirmPassword" placeholder="Enter confirmed password" class="form-control" autocomplete="off" />
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-success btn-lg mb-1 float-right" value="Registration" />
            </div>
        </form>
    </div>
</div>

